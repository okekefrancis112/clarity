
{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext"],
    "skipLibCheck": true,

    "moduleResolution": "bundler",
      // "moduleResolution": "node", // Use "node" for Node.js compatibility
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/@hirosystems/clarinet-sdk/types"]
  },
  "include": [
    "node_modules/@hirosystems/clarinet-sdk/vitest-helpers/src",
    "tests/**/*.ts",
    "contracts/**/*.clar"
    // "node_modules/@hirosystems/clarinet-sdk/vitest-helpers/src",
    // "tests/**/*.ts",
    // "tests", "tests/clarity-basics-i.test.ts", "tests/simple-storage1.test.ts",
  ]
}
